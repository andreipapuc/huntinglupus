<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <!--  Sample Dashboard screen with Two buttons -->
    <!--  Button to view all products screen -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to "
        android:id="@+id/textWelcome"
        android:textColor="#1c1c1c"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:textIsSelectable="false"
        android:textSize="32dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Project HUNTING LUPUS"
        android:id="@+id/textHuntingLupus"
        android:layout_gravity="center_horizontal"
        android:paddingTop="50dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textMotto"
        android:layout_alignEnd="@+id/textMotto"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Best Way To Organise A Workspace"
        android:id="@+id/textMotto"
        android:layout_gravity="center_horizontal"
        android:textColor="#1c1c1c"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textHuntingLupus"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_weight="0.14"
        android:src="@drawable/huskybitslogonull"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:layout_below="@+id/textMotto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Button android:id="@+id/btnUserMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="User Mode"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/textVersion"
        android:layout_alignEnd="@+id/textVersion"
        android:layout_marginTop="10dp" />

    <!--  Button to create a new product screen -->
    <Button android:id="@+id/btnAdminMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Admin Mode"
        android:layout_below="@+id/btnUserMode"
        android:layout_alignRight="@+id/textVersion"
        android:layout_alignEnd="@+id/textVersion"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="v3.1 Alpha"
        android:id="@+id/textVersion"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>